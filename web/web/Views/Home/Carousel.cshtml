
@{
    ViewBag.Title = "Carousel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Slayt</h2>
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2016/09/04/18/34/wooden-slats-1644824_960_720.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2016/04/04/20/54/wooden-wall-1308152_960_720.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2013/07/18/20/26/blue-165004_960_720.jpg" alt="Third slide">
        </div>
    </div>
</div>
<h2>Slayt 2</h2>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2016/09/04/18/34/wooden-slats-1644824_960_720.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2016/04/04/20/54/wooden-wall-1308152_960_720.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2013/07/18/20/26/blue-165004_960_720.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
